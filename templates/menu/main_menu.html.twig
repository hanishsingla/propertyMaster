{% extends 'knp_menu.html.twig' %}

{% block list %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {% import _self as knp_menu %}
        <ul {{ knp_menu.attributes(listAttributes) }}>
            
            {{ block('children') }}
        </ul>
    {% endif %}
{% endblock %}


{% block linkElement %}

    {% import _self as knp_menu %}

    {% set linkUri = item.uri %}
    <a href="{{ linkUri|raw }}"{{ knp_menu.attributes(item.linkAttributes) }}>
        <i class="fa-solid {% if item.labelAttributes is iterable %}{{ item.labelAttributes|join(' ') }}{% else %}{{ item.labelAttributes }}{% endif %}"></i>
        {{ block('label') }}
    </a>
{% endblock %}