{% extends 'base.html.twig' %}

{% block pageContent %}
    {{ include('carousel/carousel_and_filter.html.twig') }}

    <div class="section mt-5 pt-5 ">
        <div class="container">
            <div class="row mb-5 align-items-center">
                <div class="col-lg-6">
                    <h2 class="font-weight-bold text-primary heading">
                        Popular Properties
                    </h2>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <ul class="nav properties-list justify-content-end mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a href="{{ path('home') }}" class="nav-link {{ listType == 'all' ? 'active' : '' }}" data-popup="navTab" data-bs-target="#all" type="button" role="tab"
                               aria-controls="pills-home"
                               aria-selected="true">All</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a href="{{ path('home', {'listType' : 'buy'}) }}" class="nav-link {{ listType == 'buy' ? 'active' : '' }}" data-popup="navTab" data-bs-target="#buy" type="button"
                               role="tab" aria-controls="pills-profile"
                               aria-selected="false">For Buy</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a href="{{ path('home', {'listType' : 'sale'}) }}" class="nav-link {{ listType == 'sale' ? 'active' : '' }}" data-popup="navTab" data-bs-target="#sale" type="button"
                               role="tab" aria-controls="pills-contact"
                               aria-selected="false">For Sale</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a href="{{ path('home', {'listType' : 'rent'}) }}" class="nav-link {{ listType == 'rent' ? 'active' : '' }}" data-popup="navTab" data-bs-target="#rent" type="button"
                               role="tab" aria-controls="pills-disabled"
                               aria-selected="false">For Rent</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="{{ listType }}" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                        <div class="row" id="content">
                          {{ include('listing/home_listing.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
