{% extends 'base.html.twig' %}

{% block pageContent %}
    {{ include('carousel/carousel_and_filter.html.twig') }}

    <div class="section mt-5 pt-5 ">
        <div class="container">
            <div class="row mb-5 align-items-center">
                <div class="col-lg-6">
                    <h2 class="font-weight-bold text-primary heading">
                        Popular Properties
                    </h2>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <p>
                        <a href="#" target="_blank" class="btn btn-primary text-white py-3 px-4">
                            View all properties
                        </a>
                    </p>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">

                {% for  property in properties %}
                    <div class="col">
                        <div class="card">
                            <a href="#" class="img">
                                {% if property.propertyImage %}
                                    {% for  image in   property.propertyImage %}
                                        <img src="{{ asset('uploads/propertyImages/' ~ image) }}" alt="{{ image }}" class="card-img-top"/>
                                    {% endfor %}
                                {% else %}
                                    <img src="{{ asset('uploads/propertyImages/property.jpg') }}" alt="property Image" class="card-img-top"/>
                                {% endif %}
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">Card title</h5>
                                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit
                                    longer.</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
