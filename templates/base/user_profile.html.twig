{% extends 'base.html.twig' %}
{% block containerClass %}max-width-1920{% endblock %}
{% block pageContent %}
    <div class="row">
        <div class="col-md-3">
            <div class="card profile-nav">
                <div class="card-header bg-primary text-center">
                    {% if userImage %}
                        <img src="{{ asset('uploads/userImages/' ~ userImage ) }}" id="profile"
                             class="img-fluid img-thumbnail rounded-circle" alt="{{ app.session.get('userImage') }}"
                             width="70%">
                    {% else %}
                        <img src="{{ asset('image/userImage/male.png') }}" id="profile"
                             class="img-fluid img-thumbnail rounded-circle"
                             alt="male.png" width="70%">
                    {% endif %}
                    <h1 class="text-white font-sm-19">{{ app.session.get('userName') }}</h1>
                    <h5 class="text-white">{{ app.session.get('email') }}</h5>
                </div>

                <ul class="nav flex-column" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <li class="nav-item">
                        <a class="nav-link text-secondary active" id="v-pills-home-tab" data-bs-toggle="pill"
                           data-bs-target="#profileTab"
                           type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">
                            <i class="fa-solid fa-user"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-secondary" id="v-pills-home-tab" data-bs-toggle="pill"
                           data-bs-target="#settingTab"
                           type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">
                            <i class="fa-solid fa-gear"></i> Setting
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="profileTab" role="tabpanel"
                     aria-labelledby="v-pills-home-tab"
                     tabindex="0">
                    {{ form_start(form) }}
                    <div class="container-fluid">
                        <div class="row bottom-border-primary">
                            <div class="col-8">
                                <h1 class="text-primary">Profile</h1>
                            </div>
                            <div class="col-4 text-end">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.name) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.name) }}
                                                <span class="input-group-text">
                        <i class="fa-solid fa-user"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.mobile) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.mobile) }}
                                                <span class="input-group-text">
                        <i class="fa-solid fa-mobile"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.mobile) }}
                                        </div>
                                    </div>
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.address) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.address) }}
                                                <span class="input-group-text">
                        <i class="fa-solid fa-address-book"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.address) }}
                                        </div>
                                    </div>
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.city) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.city) }}
                                                <span class="input-group-text">
                        <i class="fa-solid fa-city"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.city) }}
                                        </div>
                                    </div>

                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.image) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.image) }}
                                                <span class="input-group-text">
                        <i class="fa-solid fa-image"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.image) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3 my-2">{{ form_label(form.phone) }}</div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.phone) }}
                                                <span class="input-group-text">
                       <i class="fa-solid fa-phone"></i>
                    </span>
                                            </div>
                                            {{ form_errors(form.phone) }}
                                        </div>
                                    </div>
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3 my-2">{{ form_label(form.address2) }}</div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.address2) }}
                                                <span class="input-group-text">
                                                    <i class="fa-solid fa-address-book"></i>
                                                </span>
                                            </div>
                                            {{ form_errors(form.address2) }}
                                        </div>
                                    </div>
                                    <div class="form-group row my-2">
                                        <div class="col-lg-3  my-2">
                                            {{ form_label(form.state) }}
                                        </div>
                                        <div class="col-lg-9 my-2">
                                            <div class="input-group">
                                                {{ form_widget(form.state) }}
                                                <span class="input-group-text">
                                                    <i class="fa-solid fa-map-location-dot"></i>
                                                </span>
                                            </div>
                                            {{ form_errors(form.state) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="tab-pane" id="settingTab" role="tabpanel">
                    <div class="container-fluid">
                        <div class="row bottom-border-primary">
                            <div class="col-8">
                                <h1 class="text-primary">Setting</h1>
                            </div>
                            <div class="col-4 text-end">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h4>Delete Account</h4>
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('deleteAccount') }}" class="btn btn-danger">Delete Account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

