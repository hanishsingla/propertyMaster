{% extends 'base.html.twig' %}

{% block pageContent %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% if propertyDisplayData.propertyImage is defined and propertyDisplayData.propertyImage is not null and propertyDisplayData.propertyImage|length > 0 %}
                    <img src="{{ asset('uploads/propertyImages/' ~ propertyDisplayData.propertyImage[0]) }}" class="img-fluid" alt="{{ propertyDisplayData.propertyImage[0] }}">
                {% else %}
                    <img src="{{ asset('uploads/propertyImages/property.jpg') }}" class="img-fluid" alt="property">
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

