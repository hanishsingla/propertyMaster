{% for list in propertyLists %}
    <div class="container-fluid col-md-6 col-lg-3">
        <div class="row d-flex col-md-12" style="flex-direction:row;">
            <div class="col-md-12 d-flex">
                <div class="product glow">
                    <div class="img d-flex align-items-center justify-content-center"
                         style="background-image:
                         {% if list.propertyImage is defined and list.propertyImage is not null and list.propertyImage|length > 0 %}
                                 url('{{ asset('uploads/propertyImages/' ~ list.propertyImage[0]) }}');
                         {% else %}
                                 url('{{ asset('uploads/propertyImages/property.jpg') }}');
                         {% endif %};
                                 background-attachment: fixed; background-position: center;background-repeat: no-repeat; background-size: cover;">
                        <div class="icons">
                            <p class="icon-block d-flex">
                                <a href="#"
                                   class="d-flex icon btn btn-outline-success align-items-center justify-content-center">
                                    <i class="fa-solid fa-calendar-plus"></i>
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">{{ list.propertyType }}</div>
                    <div class="text text-center">
                         <span class="{{ list.propertyStatus == 'rent' ?'out'  : 'week'}}"> {{ list.propertyStatus }}  </span>
                        <h2 class="">No. of Rooms = {{ list.propertyRooms }} </h2>
                        <span class="category font-weight-bold">Category = {{ list.propertyPrice }}</span>
                        <h5 class="mt-3">{{ list.propertyType  }}</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
