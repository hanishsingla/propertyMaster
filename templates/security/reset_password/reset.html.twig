{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4">
                <h1>Reset your password</h1>


                {{ form_start(resetForm) }}

                {{ form_row(resetForm.password) }}
                <div class="col-12 text-center"><button class="btn btn-primary mt-3">Confirm</button></div>

                {{ form_end(resetForm) }}
            </div>
            <div class="col-md-8">
                <img class="img-fluid" src="{{ asset('image/login/reset.jpg') }}" alt="resetPassword">
            </div>
        </div>
    </div>

{% endblock %}
